# Gaps between windows
gaps inner 6
gaps top 30
gaps bottom 7
 
# title bar
for_window [class="^.*"] border pixel 0 #  , title_format " %title "
new_window pixel
new_float normal
hide_edge_borders none
popup_during_fullscreen smart


