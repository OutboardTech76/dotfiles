@import "shared/colorschemes/material.rasi"

* {
    background-color: @background;
    text-color: @text-white;
    icon-font: "NotoSansDisplay Nerd Font 60";
    option-4-window-padding: 0px 0px;
    option-space: 30px;
    option-element-padding: 10px -30px 10px -57px; 
    border-radius: 44px;
}
#window {
    children: [ horibox ];
    padding: @option-4-window-padding;
    font: @icon-font;
    width: 27.87%;
    height: 12.05%;
    location: center;
}
#horibox {
    children: [ listview ];
}
#listview {
    layout: horizontal;
    spacing: @option-space;
    lines: 4;
}
#element {
    padding: @option-element-padding;
    background-color: @iconBackground;
}
#element.selected {
    background-color: @blue;
    text-color: @text-white;
}
